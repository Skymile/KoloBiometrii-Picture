<Window x:Class="Biometrics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Biometrics"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button 
            Name="BtnApply"
            Content="Apply" 
            HorizontalAlignment="Left" Height="29" Margin="10,10,0,0" 
            VerticalAlignment="Top" Width="150" Click="BtnApply_Click"/>

        <Viewbox HorizontalAlignment="Left" Height="419" Margin="165,0,0,0" VerticalAlignment="Top" Width="627">
            <Image Name="Image" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        </Viewbox>

        <Label Name="Status" Content="Time" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Height="30" Width="150"/>

    </Grid>
</Window>
