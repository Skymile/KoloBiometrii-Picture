<Window x:Class="PicturesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PicturesApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="640" WindowState="Maximized">
    <Grid>
        <Image Name="WindowImage"
               HorizontalAlignment="Stretch" 
               VerticalAlignment="Stretch" />
        <Button Name="TestButton" Content="Test" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="130" Click="TestButton_Click" />
        <Label Name="LabelStatus" Content="Time" HorizontalAlignment="Left" Height="163" Margin="0,53,0,0" VerticalAlignment="Top" Width="632" FontSize="32" FontFamily="Consolas"/>
    </Grid>
</Window>
